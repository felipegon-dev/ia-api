{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@application/*": ["src/application/*"],
      "@config/*": ["config/*"],
      "@run/*": ["run/*"],
      "@domain/*": ["src/domain/*"],
      "@apptypes/*": ["src/types/*"],
      "@infrastructure/*": ["src/infrastructure/*"]
    },
    "outDir": "dist"
  },
  "include": ["run/*.ts", "src/**/*.ts"]
}
