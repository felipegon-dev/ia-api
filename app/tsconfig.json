{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@config/*": ["config/*"],
      "@run/*": ["run/*"],
      "@apptypes/*": ["src/types/*"],
    },
    "outDir": "dist"
  },
  "include": ["run/*.ts", "src/**/*.ts"]
}
