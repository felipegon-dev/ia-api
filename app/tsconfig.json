{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@api/*": ["src/api/*"],
      "@services/*": ["src/services/*"],
      "@config/*": ["config/*"],
      "@errors/*": ["src/errors/*"]
    },
    "outDir": "dist"
  },
  "include": ["run/*.ts", "src/**/*.ts"]
}
